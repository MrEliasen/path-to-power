{
    "name": "path-to-power-server",
    "version": "0.1.0",
    "license": "CC-BY-3.0",
    "description": "The server for a simple MUD inspired browser-based multiplayer game.",
    "scripts": {
        "start": "cross-env NODE_ENV=development nodemon -L ./src --inspect --exec babel-node --presets env,stage-2",
        "build:src": "cross-env NODE_ENV=production babel src --out-dir build --source-maps cheap-module-source-map",
        "build:config": "babel config --out-dir build/config --copy-files",
        "build:utils": "babel utils --out-dir build/utils",
        "build:shared": "babel shared --out-dir build/shared",
        "build": "npm run build:config && npm run build:utils && npm run build:shared && npm run build:src",
        "serve": "cross-env NODE_ENV=production node -r dotenv/config build/index.js",
        "postinstall": "babel-node scripts/postinstall.js --presets env,stage-2"
    },
    "engines": {
        "node": ">=8.9.4"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MrEliasen/path-to-power.git"
    },
    "author": "MrEliasen (@markeliasen)",
    "bugs": {
        "url": "https://github.com/MrEliasen/path-to-power/issues"
    },
    "nodemonConfig": {
        "ignore": [
            "node_modules/*",
            "npm-debug.log",
            "config.json"
        ]
    },
    "homepage": "https://www.pathtopower.online",
    "dependencies": {
        "@sendgrid/mail": "^6.2.1",
        "babel-preset-stage-2": "^6.24.1",
        "babel-runtime": "^6.26.0",
        "bcrypt": "^2.0.1",
        "bluebird": "^3.5.1",
        "body-parser": "^1.18.3",
        "chalk": "^2.4.1",
        "content-filter": "^1.1.2",
        "dotenv": "^5.0.1",
        "escape-string-regexp": "^1.0.5",
        "event": "^1.0.0",
        "express": "^4.16.3",
        "helmet": "^3.12.1",
        "jsonwebtoken": "^8.2.1",
        "mkdirp": "^0.5.1",
        "moment": "^2.22.1",
        "mongoose": "^5.1.2",
        "nodemailer": "^4.6.5",
        "passport": "^0.4.0",
        "passport-github": "^1.1.0",
        "passport-local": "^1.0.0",
        "readline-sync": "^1.4.9",
        "socket.io": "^2.1.1",
        "uuid": "^3.2.1"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-eslint": "^8.2.3",
        "babel-plugin-module-resolver": "^3.1.1",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "cross-env": "^5.1.6",
        "eslint": "^4.19.1",
        "eslint-config-google": "^0.9.1",
        "nodemon": "^1.17.5"
    }
}
